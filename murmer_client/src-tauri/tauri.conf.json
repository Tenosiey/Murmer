{
	"$schema": "https://schema.tauri.app/config/2",
        "productName": "Murmer",
        "version": "2025.7.23-alpha.1",
        "identifier": "com.murmer.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
        "app": {
                "windows": [
                        {
                                "title": "Murmer",
                                "width": 1600,
                                "height": 900
                        }
                ],
                "trayIcon": {
                        "iconPath": "icons/icon.png"
                },
                "security": {
                        "csp": null
                }
        },
        "bundle": {
                "active": true,
                "targets": "all",
                "icon": [
                        "icons/32x32.png",
                        "icons/128x128.png",
                        "icons/128x128@2x.png",
                        "icons/icon.icns",
                        "icons/icon.ico"
                ],
                "windows": {
                        "wix": {
                                "version": "25.7.22.1"
                        }
                }
        }
}
